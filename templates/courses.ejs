<!DOCTYPE html>
<html lang="en">
<%- include('components/head') %>
<%- include('components/theme') %>
<%- include('components/header') %>

<% 
  var icon = ''
  if(category === 'CA') icon = 'ca'
  else if(category === 'CA') icon = 'ca'
  else if(category === 'UGC-NET') icon = 'ugc'
  else if(category === 'MBA') icon = 'mba'
  else if(category === 'JUNIOR') icon = 'junior'
%>

<div class="inner-banner overflow-hidden position-relative bg-default-3 mb-18 py-lg-22 py-12">
  <img class="position-absolute object-fit-cover" style="bottom: -16px;right: -32px;opacity: .6;" height="250px" src="/static/image/main-covers/<%= icon %>.png" alt="">
    <div class="container">
      <div class="row py-12">
        <div class="col-xl-12 col-lg-12">
          <div class="px-md-12">
            <h2 class="title gr-text-2 mb-4 mb-lg-6"><%= category %> Courses</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container">
    <% subCategories.forEach(subCategory => { %>
      <div class="col-12">
        <h3><%= subCategory %></h3>
      </div>
      <div class="row mb-16 d-flex">
        <% courses.filter(course => course.subCategory === subCategory).map(course => { %>    
            <div class="col-lg-4 my-6">
              <%- include('components/course-card', course) %>
            </div>
        <% }) %>
        </div>
    <% }) %> 
    <div class="row mb-24 d-flex">
      <div class="col-12">
        <h3>Others</h3>
      </div>
      <% courses.filter(course => course.subCategory === "Others").map(course => { %>    
          <div class="col-lg-4 my-6">
            <%- include('components/course-card', course) %>
          </div>
      <% }) %>
      </div>
  </div>
  
    
<%- include('components/footer') %>
</body>
</html>